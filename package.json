{
	"name": "@spaire/adapters",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"check": "turbo check",
		"format": "turbo format",
		"ci": "turbo build && turbo check && turbo test",
		"test": "turbo test -- run",
		"publish-packages": "pnpm --filter @spaire/adapter-utils build && turbo run lint check build && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"prettier": "^3.7.4",
		"turbo": "^2.7.4",
		"typescript": "5.9.3"
	},
	"packageManager": "pnpm@10.19.0",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@changesets/cli": "^2.29.8"
	},
	"pnpm": {
		"overrides": {
			"@spaire/currency": "workspace:*"
		}
	}
}
